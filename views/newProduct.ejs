<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/addproduct.css" />
    <link rel="icon" type="image/x-icon" href="/frootie-logo.svg" />
    <script src="/bootstrap.js" defer></script>
    <title>Add Product</title>
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div class="container">
      <div class="main-content">
        <div class="header-addbtn">
          <h1>add a product</h1>
        </div>
        <div class="product-form-container">
          <form
            class="product-form"
            action="/products/new"
            method="post"
            enctype="multipart/form-data"
          >
            <label for="name">Name:</label>
            <input type="text" name="name" required />
            <label for="price">Price:</label>
            <input type="number" name="price" min="0.01" step="any" required />
            <label for="quantity">Quantity:</label>
            <input type="number" name="quantity" min="1" max="999" required />
            <label for="brand">Brand:</label>
            <input type="text" name="brand" required />
            <label for="description">Description:</label>
            <textarea name="description" maxlength="300"></textarea>
            <label for="category">Category:</label>
            <select name="category" id="category">
              <% listedCategories.forEach((category) => { %>
              <option value="<%=category.category%>">
                <%=category.category%>
              </option>
              <% }) %>
            </select>
            <label for="image">Image:</label>
            <input
              type="file"
              name="src"
              accept="image/png, image/jpeg, image/svg+xml"
            />
            <input type="text" name="isDefault" hidden value="false" />

            <button type="submit" class="btn btn-custom add-product-submit">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
